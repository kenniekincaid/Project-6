extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Welcome to My Portfolio!

      p.lead.text-light
        | This portfolio showcases my coding projects from the beginning of my journey in web development to date.
        | Please check back for updates as new projects are added regularly!
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
 
      each project in projects
        .cell
          a(href=`project/${project.id}`)
            img.thumbnail(src=`/static/images/${project.image_urls[0]}`)
            h5= `${project.project_name}`
      
